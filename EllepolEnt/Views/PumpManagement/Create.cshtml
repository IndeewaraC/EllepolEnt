@model EllepolEnt.Models.PumpManagement

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout_03.cshtml";
}

<h1>Create</h1>

<h4>PumpManagement</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ItemID" class="control-label">Item Id</label>
                <select name="ItemID" class="form-control" asp-items="@ViewBag.listofItemId"></select>
            </div>
            <div class="form-group">
                <label asp-for="UserID" class="control-label">User ID</label>
                <select name="UserID" class="form-control" asp-items="@ViewBag.listofuserids"></select>
            </div>
            <div class="form-group">
                <label asp-for="pumpID" class="control-label">Pump Id</label>
                <select name="PumpID" class="form-control" asp-items="@ViewBag.listofPumpIds"></select>
            </div>
            <div class="form-group">
                <label asp-for="GRN_ID" class="control-label">Grn Id</label>
                <select name="GRN_ID" class="form-control" asp-items="@ViewBag.listofGrn"></select>
            </div>
            <div class="form-group">
                <label asp-for="Date" class="control-label">Date</label>
                <input asp-for="Date" class="form-control" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="cash_In" class="control-label">Cash In</label>
                <input asp-for="cash_In" class="form-control" />
                <span asp-validation-for="cash_In" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ltrs" class="control-label">Liters</label>
                <input asp-for="Ltrs" class="form-control" />
                <span asp-validation-for="Ltrs" class="text-danger"></span>
            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
